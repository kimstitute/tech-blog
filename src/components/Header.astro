---
import { CONTACT_EMAIL, SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h1><a href="/">{SITE_TITLE}</a></h1>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="contact">
			<a href={`mailto:${CONTACT_EMAIL}`} class="contact-button">Contact</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1.5em;
		background: white;
		box-shadow: 0 8px 24px rgba(var(--black), 5%);
	}
	h1 {
		margin: 0;
		font-size: 1.15em;
		font-weight: 700;
		letter-spacing: -0.01em;
	}

	h1 a,
	h1 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1.5em;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		font-weight: 500;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.contact {
		display: flex;
	}
	.contact-button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0.55em 1.3em;
		border-radius: 999px;
		background: var(--accent);
		color: white;
		font-size: 0.95em;
		line-height: 1;
		border: none;
		box-shadow: 0 10px 30px rgba(35, 55, 255, 0.25);
		transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
	}
	.contact-button:hover {
		background: var(--accent-dark);
		transform: translateY(-2px);
		box-shadow: 0 14px 32px rgba(35, 55, 255, 0.35);
	}
	.contact-button:focus {
		outline: 2px solid var(--accent);
		outline-offset: 4px;
	}
	@media (max-width: 720px) {
		header {
			padding: 0 1em;
		}
		nav {
			flex-wrap: wrap;
			gap: 0.5em;
		}
		.internal-links {
			order: 3;
			width: 100%;
			display: flex;
			justify-content: space-between;
		}
		nav a {
			padding: 0.75em 0;
		}
		.contact {
			order: 2;
		}
	}
</style>
